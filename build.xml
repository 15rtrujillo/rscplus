<project name="rscplus" default="run">
	<property name="src.dir" value="src" />
	<property name="build.dir" value="build" />
	<property name="dist.dir" value="dist" />
	<property name="bin.dir" value="bin" />
	<property name="assets.dir" value="assets" />

	<property name="jar.main-class" value="Client.Launcher" />
	<property name="jar.name" value="${ant.project.name}.jar" />
	<property name="jar.file" value="${bin.dir}/${jar.name}" />

	<path id="build.classpath">
		<fileset dir="${basedir}">
			<include name="lib/*.jar"/>
		</fileset>
	</path>

	<pathconvert property="jar.classpath" pathsep=" ">
		<path refid="build.classpath"/>
			<mapper>
				<chainedmapper>
					<flattenmapper />
					<globmapper from="*.jar" to="lib/*.jar" />
				</chainedmapper>
			</mapper>
	</pathconvert>

	<target name="compile">
		<mkdir dir="${build.dir}" />
		<javac srcdir="${src.dir}" destdir="${build.dir}">
			<classpath refid="build.classpath" />
		</javac>
	</target>

	<target name="install" depends="compile">
		<mkdir dir="${bin.dir}" />
		<mkdir dir="${bin.dir}/lib" />
		<copy flatten="true" todir="${bin.dir}/lib" includeemptydirs="false">
			<fileset dir="lib">
				<include name="**/*.jar" />
			</fileset>
		</copy>
		<copy flatten="true" todir="${bin.dir}" includeemptydirs="false">
			<fileset dir=".">
				<include name="LICENSE" />
			</fileset>
		</copy>
		<jar destfile="${jar.file}" basedir="${build.dir}">
			<manifest>
				<attribute name="Main-Class" value="${jar.main-class}" />
				<attribute name="Class-Path" value="${jar.classpath}" />
			</manifest>
			<fileset dir="." includes="${assets.dir}/**" />
		</jar>
	</target>

	<target name="dist" depends="install">
		<zip destfile="${dist.dir}/rscplus.zip">
			<fileset dir="${bin.dir}">
				<include name="rscplus.jar" />
				<include name="lib/*.jar" />
				<include name="LICENSE" />
			</fileset>
		</zip>
	</target>

	<target name="run" depends="install">
		<java jar="${jar.file}" dir="${bin.dir}" fork="true" />
	</target>

	<target name="clean">
		<delete dir="${build.dir}" />
		<delete dir="${bin.dir}" />
		<delete dir="${dist.dir}" />
	</target>
</project>
